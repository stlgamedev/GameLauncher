<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.openfl.org/project/1.0.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.openfl.org/project/1.0.4 http://lime.openfl.org/xsd/project-1.0.4.xsd">

	<app title="STLGameLauncher" file="STLGameLauncher" main="Main" version="0.1.0"
		company="STLGameDev" package="com.axolstudio.stlgamelauncher" />
	<meta package="com.axolstudio.stlgamelauncher" />

	<window width="1920" height="1080" fps="60" background="#000000" hardware="true" />
	<window if="desktop" orientation="landscape" fullscreen="true" resizable="false" />
	<window allow-shaders="true" require-shaders="true" depth-buffer="true" stencil-buffer="true" />
	<window allow-high-dpi="true" if="desktop" />

	<set name="BUILD_DIR" value="export" />

	<source path="source" />
	<assets path="assets" embed="true" />

	<haxelib name="flixel" />

	<haxelib name="openfl-aseprite" />
	<haxelib name="hxCodec" />

	<haxedef name="FLX_NO_HEALTH" />

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />

	<haxedef name="HXCPP_STACK_TRACE" if="debug" />
	<haxedef name="HXCPP_STACK_LINE" if="debug" />

	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<architecture name="x64" if="windows" />

	<haxedef name="import" value="Import" />

	<haxedef name="dce=full" if="release" />
	<haxedef name="HXCPP_STRIP" if="release" />
	<haxedef name="HXCPP_OPTIMIZE_LINK" if="release" />

	<haxedef name="no-console" if="windows" />
	<haxedef name="noInlineImport" />

	<!-- Prebuild: generate version.rc from Project.xml version for Windows builds -->
	<prebuild if="windows">
		<arg>python</arg>
		<arg>scripts/generate_version_rc.py</arg>
	</prebuild>

	<!-- Template: copy version.rc into build output for Windows builds -->
	<template path="export/windows/bin/version.rc" rename="version.rc" if="windows" />

</project>